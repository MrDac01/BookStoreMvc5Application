@using X.PagedList
@model IEnumerable<BookStoreMvc5Application.ViewModels.Authors.IndexAuthorsViewModel>

@{
    ViewBag.Title = "Управления авторами";
}

<h2>Index</h2>

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", new { area = "", controller = "home" })">Главная</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>

<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="col-md-3">
        <p>
            @Html.ActionLink("Добавить нового автора", "Create", null, new { @class = "btn btn-success" })
        </p>
    </div>

    <div class="col-md-6">

        @using (Html.BeginForm("index", "authorsedit", method: FormMethod.Get))
        {
            <input type="text" name="search" value="@ViewBag.search" />
            <input type="submit" />
        }
    </div>
</div>
    <table class="table">
        <tr>
            <th>
                Имя
            </th>
            <th>
                Фамилия
            </th>
            <th>
               Дата добавления
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.CreatedAt
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })"> <i class="glyphicon glyphicon-pencil"></i> Изменить</a>  |
                    <a href="@Url.Action("Details", new { id = item.Id })"> <i class="glyphicon glyphicon-book"></i> Просмотр</a>  |
                    <a href="@Url.Action("Delete", new { id = item.Id })"> <i class="glyphicon glyphicon-trash"></i> Удалить </a>

                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
        }

    </table>
